<?xml version="1.0" encoding="UTF-8"?>
<pages xmlns="http://jboss.com/products/seam/pages"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
       login-view-id="/login.xhtml">
       
    
    <!-- page view-id="/*">
        <navigation from-action="#{}">
            <rule if-outcome="success">
                <redirect view-id="/home.xhtml" />
            </rule>
        </navigation>
    </page -->
	
	<page view-id="/paginas/*" login-required="true">
	</page>
	
	<page view-id="/paginas/contato/*">
		<navigation>
			<rule if-outcome="success">
				<redirect view-id="/paginas/contato/contatos.xhtml" />
			</rule>
			<rule if-outcome="editar">
				<redirect view-id="/paginas/contato/editar.xhtml" />
			</rule>
			<rule if-outcome="novo">
				<redirect view-id="/paginas/contato/new.xhtml"></redirect>
			</rule>
		</navigation>
	</page>
	
	<page view-id="/cadastro.xhtml">
		<navigation from-action="#{usuarioBean.salvar}">
			<rule if-outcome="success">
				<redirect view-id="/login.xhtml"></redirect>
			</rule>
		</navigation>
	</page>
	<page view-id="/paginas/usuario/*" login-required="true">
		<restrict>#{s:hasRole('admin')}</restrict>
	</page>
</pages>
